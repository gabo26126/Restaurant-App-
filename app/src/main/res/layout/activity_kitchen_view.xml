<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/ticket"
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="#BDBDBD"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/table1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bord 1"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="@id/ticket"
        app:layout_constraintTop_toTopOf="@id/ticket" />

    <TextView
        android:id="@+id/mat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mat1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/ticket"
        app:layout_constraintTop_toBottomOf="@id/table1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2x"
        android:textSize="20sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/ticket"
        app:layout_constraintTop_toTopOf="@id/mat1" />

    <TextView
        android:id="@+id/mat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mat2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/ticket"
        app:layout_constraintTop_toBottomOf="@id/mat1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2x"
        android:textSize="20sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/ticket"
        app:layout_constraintTop_toTopOf="@id/mat2" />

    <TextView
        android:id="@+id/mat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mat3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/ticket"
        app:layout_constraintTop_toBottomOf="@id/mat2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2x"
        android:textSize="20sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/ticket"
        app:layout_constraintTop_toTopOf="@id/mat3" />

    <Button
        android:id="@+id/doneTicket1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="FÃ¤rdig"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/mat3"
        app:layout_constraintStart_toStartOf="@id/ticket"
        app:layout_constraintEnd_toEndOf="@id/ticket" />

</androidx.constraintlayout.widget.ConstraintLayout>